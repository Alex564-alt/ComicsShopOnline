@model IEnumerable<ComicsShopOnline.Web.Models.ComicViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<div class="container mt-4">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        @foreach (var comic in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@comic.CoverURl" class="card-img-top" alt="@comic.Name" />
                    <div class="card-body text-center">
                        <h5 class="card-title">@comic.Name</h5>
                        <p class="card-text">@comic.Price $</p>
                    </div>
                    <div class="card-footer text-center">
                        @using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post))
                        {
                            @Html.Hidden("comicId", comic.Id)
                            <button type="submit">Add to Cart</button>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>